{{~#*inline "summaryWithNumberLink" ~}}
    - [{{{ summary }}}]({{../remote_url}}/pull/{{number}})
{{/inline~}}

{{~#*inline "summaryWithShaLink" ~}}
    - [{{{ summary }}}]({{../remote_url}}/commit/{{sha}})
{{/inline~}}

{{~#*inline "summaryWithNumber" ~}}
    - {{{ summary }}} {{#if number}}(#{{number}}){{/if}}
{{/inline~}}

{{~#*inline "title" ~}}
    # {{ range }} ({{ date }})

{{/inline~}}

{{~#*inline "scopeTitle"}}
    {{~#if title}}## {{title}}
    {{/if}}
{{/inline~}}

{{~#*inline "categoryTitle"}}
    {{~#if title}}### {{title}}
    {{/if}}
{{/inline~}}

{{~#*inline "changes"~}}
    - {{ tidy-change "  " . }}
{{/inline~}}

{{~#if commits~}}
    {{~> title }}
    {{~#each commits~}}
        {{~#if ../remote_url~}}
            {{~#if number ~}}
                {{~> summaryWithNumberLink ~}}
            {{~^~}}
                {{~> summaryWithShaLink ~}}
            {{~/if~}}
        {{~^~}}
            {{~> summaryWithNumber ~}}
        {{~/if~}}
    {{~/each~}}
    {{~#each scopes~}}
        {{~> scopeTitle ~}}
        {{~#each categories~}}
            {{~> categoryTitle ~}}
            {{~#each changes~}}
                {{~> changes ~}}
            {{~/each~}}
        {{~/each~}}
    {{~/each~}}
{{~/if~}}